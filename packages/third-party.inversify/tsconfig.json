{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2022"],
		"types": ["reflect-metadata", "node"],
		"module": "commonjs",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"baseUrl": "./"
	},
	"include": ["src/**/*"]
}
