{
	"compilerOptions": {
		"target": "es2016",
		"lib": ["es6"],
		"types": ["reflect-metadata", "node"],
		"module": "commonjs",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"baseUrl": "./",
		"paths": {
			"@yohira/base": ["packages/base/src"],
			"@yohira/core": ["packages/core/src"],
			"@yohira/extensions.config": ["packages/extensions.config/src"],
			"@yohira/extensions.config.abstractions": [
				"packages/extensions.config.abstractions/src"
			],
			"@yohira/extensions.config.binder": [
				"packages/extensions.config.binder/src"
			],
			"@yohira/extensions.config.env-variables": [
				"packages/extensions.config.env-variables/src"
			],
			"@yohira/extensions.config.file-extensions": [
				"packages/extensions.config.file-extensions/src"
			],
			"@yohira/extensions.config.json": [
				"packages/extensions.config.json/src"
			],
			"@yohira/extensions.dependency-injection": [
				"packages/extensions.dependency-injection/src"
			],
			"@yohira/extensions.dependency-injection.abstractions": [
				"packages/extensions.dependency-injection.abstractions/src"
			],
			"@yohira/extensions.dependency-injection.specification.tests": [
				"packages/extensions.dependency-injection.specification.tests/src"
			],
			"@yohira/extensions.features": ["packages/extensions.features/src"],
			"@yohira/extensions.file-providers": [
				"packages/extensions.file-providers/src"
			],
			"@yohira/extensions.hosting": ["packages/extensions.hosting/src"],
			"@yohira/extensions.hosting.abstractions": [
				"packages/extensions.hosting.abstractions/src"
			],
			"@yohira/extensions.logging": ["packages/extensions.logging/src"],
			"@yohira/extensions.logging.abstractions": [
				"packages/extensions.logging.abstractions/src"
			],
			"@yohira/extensions.options": ["packages/extensions.options/src"],
			"@yohira/extensions.options.config-extensions": [
				"packages/extensions.options.config-extensions/src"
			],
			"@yohira/features": ["packages/features/src"],
			"@yohira/hosting": ["packages/hosting/src"],
			"@yohira/hosting.abstractions": [
				"packages/hosting.abstractions/src"
			],
			"@yohira/hosting.server.abstractions": [
				"packages/hosting.server.abstractions/src"
			],
			"@yohira/http": ["packages/http/src"],
			"@yohira/http-logging": ["packages/http-logging/src"],
			"@yohira/http.abstractions": ["packages/http.abstractions/src"],
			"@yohira/http.extensions": ["packages/http.extensions/src"],
			"@yohira/http.features": ["packages/http.features/src"],
			"@yohira/routing": ["packages/routing/src"],
			"@yohira/server.node": ["packages/server.node/src"],
			"@yohira/server.node.core": ["packages/server.node.core/src"],
			"@yohira/static-files": ["packages/static-files/src"],
			"@yohira/third-party.inversify": [
				"packages/third-party.inversify/src"
			],
			"@yohira/third-party.ts-results": [
				"packages/third-party.ts-results/src"
			]
		}
	},
	"include": ["packages/**/*"]
}
