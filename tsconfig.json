{
	"compilerOptions": {
		"target": "es2016",
		"lib": ["es6"],
		"types": ["reflect-metadata", "node"],
		"module": "commonjs",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"sourceMap": true
	},
	"include": ["packages/**/*"]
}
