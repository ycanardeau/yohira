// https://github.com/mikro-orm/mikro-orm/blob/50347efd909dafd0bceae09dc35019010cab8329/tsconfig.build.json
{
	"compilerOptions": {
		"module": "Node16",
		"target": "es2020",
		"lib": ["es2020"],
		"moduleResolution": "Node16",
		"declaration": true,
		"sourceMap": false,
		"strict": true,
		"suppressImplicitAnyIndexErrors": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"preserveConstEnums": true
	},
	"exclude": ["**/node_modules", "**/dist"]
}
